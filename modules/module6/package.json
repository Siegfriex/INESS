{
  "name": "module6-devops-agent",
  "version": "1.0.0",
  "description": "DevOps 및 배포 전담 AI 에이전트 모듈",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts --fix",
    "type-check": "tsc --noEmit",
    "infra:plan": "terraform plan",
    "infra:apply": "terraform apply",
    "infra:destroy": "terraform destroy",
    "deploy:staging": "tsx src/scripts/deploy-staging.ts",
    "deploy:production": "tsx src/scripts/deploy-production.ts",
    "monitor:health": "tsx src/monitoring/health-check.ts",
    "backup:create": "tsx src/scripts/backup.ts"
  },
  "dependencies": {
    "@google-cloud/monitoring": "^3.0.0",
    "@google-cloud/logging": "^10.1.0",
    "@google-cloud/secret-manager": "^4.2.0",
    "@google-cloud/storage": "^6.9.0",
    "firebase-admin": "^11.5.0",
    "dockerode": "^4.0.2",
    "@kubernetes/client-node": "^0.20.0",
    "prometheus-api-metrics": "^3.2.2",
    "winston": "^3.8.2",
    "node-cron": "^3.0.2",
    "axios": "^1.3.4"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@types/node-cron": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "typescript": "^4.9.5",
    "tsx": "^3.12.3",
    "jest": "^29.4.3",
    "@types/jest": "^29.4.0"
  },
  "keywords": [
    "devops",
    "ci-cd",
    "gcp",
    "kubernetes",
    "monitoring",
    "automation",
    "ai-agent"
  ],
  "author": "Module6 DevOps Agent",
  "license": "MIT",
  "agent_config": {
    "type": "devops_engineer",
    "auto_start": true,
    "workspace": "modules/module6",
    "responsibilities": [
      "CI/CD 관리",
      "인프라 운영",
      "모니터링",
      "보안 관리"
    ]
  }
}